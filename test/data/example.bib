@article{bargmann_connectome_2013,
  author =        {Bargmann, Cornelia I. and Marder, Eve},
  journal =       {Nature Methods},
  month =         jun,
  number =        {6},
  pages =         {483--490},
  title =         {From the connectome to brain function},
  volume =        {10},
  year =          {2013},
  abstract =      {In this Historical Perspective, we ask what
                   information is needed beyond connectivity diagrams to
                   understand the function of nervous systems. Informed
                   by invertebrate circuits whose connectivities are
                   known, we highlight the importance of neuronal
                   dynamics and neuromodulation, and the existence of
                   parallel circuits. The vertebrate retina has these
                   features in common with invertebrate circuits,
                   suggesting that they are general across animals.
                   Comparisons across these systems suggest approaches
                   to study the functional organization of large
                   circuits based on existing knowledge of small
                   circuits.},
